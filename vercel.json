{
  "version": 2,
  "builds": [
    { "src": "api/scrape.js", "use": "@vercel/node" },
    { "src": "public/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/scrape", "dest": "/api/scrape.js" },
    { "src": "/api/details", "dest": "/api/details.js" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}
